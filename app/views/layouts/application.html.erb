<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<!-- probably a good idea to keep the following line in any rails app -->
	<%= javascript_include_tag :defaults %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
	<!-- add some debugging to the page to use during development -->
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>


		